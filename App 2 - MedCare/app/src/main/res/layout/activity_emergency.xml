<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#5552F0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Logo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoTop"
                android:layout_width="213dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_2" />
        </RelativeLayout>

        <!-- Heading -->
        <TextView
            android:id="@+id/emergencyHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:text="Emergency Info"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emergencyName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="Name: "
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emergencyDOB"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_dob"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="DOB: "
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_healthcare"
            android:drawableRight="@drawable/ic_more"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="Healthcare Provider Info"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_contacts"
            android:drawableRight="@drawable/ic_more"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="Emergency Contacts"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_medical"
            android:drawableRight="@drawable/ic_more"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="Medical Information"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_insurance"
            android:drawableRight="@drawable/ic_more"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:text="Insurance Information"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Divider above bottom nav -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF" />

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Settings Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconSettings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings" />

                <View
                    android:id="@+id/underlineSettings"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Pillbox Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconPillbox"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_pillbox" />

                <View
                    android:id="@+id/underlinePillbox"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Home Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_home" />

                <View
                    android:id="@+id/underlineHome"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Notifications Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconNotifications"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notifications" />

                <View
                    android:id="@+id/underlineNotifications"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- User Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconUser"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_user" />

                <View
                    android:id="@+id/underlineUser"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>